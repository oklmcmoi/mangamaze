    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "telegraf": "^4.15.3",
    "ton": "^13.9.0",
    "ton-crypto": "^3.2.0",
    "tonweb": "^0.0.60"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.6",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "dotenv-webpack": "^8.0.1",
    "html-webpack-plugin": "^5.5.4",
