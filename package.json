{
  "name": "mangamaze",
  "version": "1.0.0",
  "description": "A manga-themed Pac-Man game with TON blockchain integration",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production && npm run build:functions",
